<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <validationRules>
        <fullName>Minimum_Spending_Validation</fullName>
        <active>true</active>
        <errorConditionFormula>IF(
 (ISPICKVAL( Support_Tier__c , &quot;Silver&quot;)
      &amp;&amp;
   ( Total_Spending__c &lt;
   $CustomMetadata.Support_Tier__mdt.Silver.Minimum_Spending__c
   )
 )
      ||
 (ISPICKVAL( Support_Tier__c , &quot;Gold&quot;)
      &amp;&amp;
   ( Total_Spending__c &lt;
   $CustomMetadata.Support_Tier__mdt.Gold.Minimum_Spending__c
   )
 ), TRUE, FALSE
)</errorConditionFormula>
        <errorMessage>Dollar value too low for this support tier</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>Revenue_Validation</fullName>
        <active>true</active>
        <errorConditionFormula>ISPICKVAL(Support_Tier__c, &quot;Gold&quot;) &amp;&amp;
AnnualRevenue &lt; 20 * $CustomMetadata.Support_Tier__mdt.Gold.Minimum_Spending__c</errorConditionFormula>
        <errorMessage>Annual revenue is less than 20 times the minimum spending amount of the Gold support tier</errorMessage>
    </validationRules>
</CustomObject>
